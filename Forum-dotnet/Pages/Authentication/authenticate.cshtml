@page
@model Forum_dotnet.Pages.Authentication.authenticateModel
@{
	 ViewData["Title"] = "Authentication";
}

<div class="row d-flex justify-content-center align-items-center my-5 py-5">
	<div class="col ">
		<h1 class="h1 text-center">Authentication</h1>
		<div class="row d-flex justify-content-center align-items-center">
			<div class="col-md-4">
			</div>
			<div class="col-md-4">
				<form method="post">
					<div class="form-group mt-2">
						<label asp-for="user.email">Email</label>
						<input class="form-control" asp-for="user.email" />
					</div>
					<div class="form-group mt-2">
						<label asp-for="user.password">Password</label>
						<input class="form-control" asp-for="user.password" />
					</div>
					<button class="btn btn-primary mt-2" type="submit">Login</button>
				</form>
			</div>
			<div class="col-md-4">
			</div>
		</div>
	</div>
</div>